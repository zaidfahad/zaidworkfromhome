{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "noImplicitUseStrict": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        },
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}